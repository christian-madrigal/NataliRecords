@model IEnumerable<NataliRecords.Models.Record>


@{
    ViewData["Title"] = "List of Vinyl Record";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var rowCount = Model.Count();
    
    
}

<style>
    body {
        background-image: url("/images/Vinyl.jpg");
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: scroll;
        min-height: 100%;
        margin: 0;
    }
</style>

<h1>Index</h1>

<p>
@*    <a asp-action="Create">Create New</a>*@
</p>
<form method="post">
    <div class="row">
        <div class="col-3">
            <input type="text" class="form-control" name="name" id="name-input" placeholder="Enter the Artist or Album Name" />
        </div>
        <div class="col-3">
            <input type="submit" value="Search" class="btn btn-success"/>
        </div>
        
    </div><br />
</form>
<br/>
<label style="font-size:larger" class="text-black fw-bold">No# of Vinyl Records: @rowCount </label>
<br/>  




<div class="table-responsive">
<table id="Vinyl" class="table table-responsive table-secondary table-bordered border-primary text-black overflow-scroll">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
@*                <a asp-action="Update" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<br/>
<br/>
    <script>
    const nameInput = document.getElementById('name-input');
    nameInput.addEventListener('change', (event) => {
        event.target.value = event.target.value.trim();
    });
</script>
